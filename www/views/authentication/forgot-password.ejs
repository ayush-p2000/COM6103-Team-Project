<!----------------------------------------------- Form-card Layout ------------------------------------------------>

<div class="container h-100">
    <div class="card shadow-lg mt-5">
        <div class="card-body p-0">
            <div class="row justify-content-center m-0">
                <div class="col-md-6 bg-success-subtle rounded-start-2 align-content-center py-5 py-md-0">
                    <p class="text-center">
                        <i class="fa-solid fa-leaf fa-5x text-center"></i>
                    </p>
                    <h1 class="text-center">
                        Forgot Password?
                    </h1>
                    <p class="text-center m-0">
                         No worries!
                    </p>
                    <p class="text-center m-0">
                        Enter your email, and we'll send you a link to reset it.
                    </p>
                </div>
                <div class="col-md-6 justify-content-center align-content-center h-100">
                    <main class="w-100 m-auto p-2 d-flex justify-content-center align-items-center fw-bold  rounded-3" style="height: 500px">
                        <form class="w-75 py-5" method="POST" action="/forgot-password">
                            <h1 class="parent-text text-start align-items-center justify-content-center fw-bold fw-bolder pb-5 my-2">
                                Confirm your Email
                            </h1>
                            <!----------------------------------------------------- Email verification field entries --------------------------------------------------------------------------->

                            <div class="pb-2">
                                <div class="form-floating mt-1 mx-1">
                                    <input type="email" class="form-control" id="resetEmail" name="resetEmail"
                                           placeholder="email@company.com"
                                           required>
                                    <label for="resetEmail">Email</label>
                                </div>
                            </div>

                            <div class="card-footer-sign my-3">
                                <button class="btn btn-primary w-100 py-2"
                                        id="submit-btn">
                                    Reset
                                </button>
                            </div>
                        </form>
                    </main>
                </div>
            </div>
        </div>
    </div>
</div>

