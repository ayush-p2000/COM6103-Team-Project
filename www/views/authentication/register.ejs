<%- include("../components/header") %>

<%- include("../components/navbar") %>

<!----------------------------------------------- Stylesheets used ------------------------------------------------>

<link rel='stylesheet' href='/stylesheets/login_register.css'/>

<!----------------------------------------------- Form-card Layout ------------------------------------------------>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="justify-content-center h-100 mt-3 align-items-center">
                <main class="form-signin w-100 m-auto p-2 justify-content-center align-items-center overflow-hidden fw-bold card shadow-lg rounded-3 bg-transparent">
                    <form class="w-75 py-5">
                        <h2 class="parent-text text-center align-items-center justify-content-center fw-bold pb-4 my-2">
                            Register
                        </h2>

                        <div class="pb-2">
                            <div class="form-floating m-1">
                                <input type="text" class="form-control" id="formInputName" placeholder="Name" required>
                                <label for="formInputName">Name</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="date" class="form-control" id="formInputDate" required>
                                <label for="formInputDate">Date of Birth</label>
                            </div>
                            <div class="form-floating mt-1 mx-1">
                                <input type="email" class="form-control" id="formInputEmail"
                                       placeholder="name@example.com"
                                       required>
                                <label for="formInputEmail">Email address</label>
                            </div>
                            <div class="form-floating mb-1 mx-1">
                                <input type="password" class="form-control" id="floatingInputPassword"
                                       placeholder="Password"
                                       required>
                                <label for="floatingInputPassword">Password</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="number" class="form-control" id="formInputPhone" placeholder="+99 1234567890" required>
                                <label for="formInputPhone">Phone</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="text" class="form-control" id="formInputAddress1" placeholder="22 High street" required>
                                <label for="formInputAddress1">Address Line 1</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="text" class="form-control" id="formInputAddress2" placeholder="Apartment 07" required>
                                <label for="formInputAddress2">Address Line 2</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="text" class="form-control" id="formInputPostcode" placeholder="XY0 XYZ0" required>
                                <label for="formInputPostcode">Postcode</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="text" class="form-control" id="formInputCity" placeholder="Sheffield" required>
                                <label for="formInputCity">City</label>
                            </div>
                            <div class="form-floating m-1">
                                <input type="text" class="form-control" id="formInputCountry" placeholder="United Kingdom" required>
                                <label for="formInputCountry">Country</label>
                            </div>
                        </div>

                        <div class="form-check form-switch text-center m-1">
                            <input class="form-check-input" type="checkbox" value="remember-me" id="tcCheck">

                            <label class="form-check-label" for="tcCheck">
                                <p>
                                    Agree to the <a href="#" class="hover-link text-decoration-none">Terms and Conditions</a>
                                </p>
                            </label>

                        </div>

                        <div class="card-footer-sign mt-2">
                            <button class="btn btn-primary w-100 py-2" type="button">Sign up</button>

                            <div class="text-center align-content-center fw-bolder mt-3">
                                <p>Already have an account? <a href="/login" class="hover-link text-decoration-none">Login</a></p>

                            </div>
                        </div>
                    </form>
                </main>
            </div>
        </div>
    </div>
</div>

