<%- include("../components/header") %>

<%- include("../components/navbar") %>

<% // TODO The Div below shall be removed when other components are created and integrated into the view.%>
<div class="w-50 h-100 d-flex justify-content-center align-items-center m-auto">
    <div class="card">
        <h3 class="card-header">Payment options</h3>
        <form class="card-body" method="POST">
            <h3 class="card-title text-center">Your details</h3>
            <div>
                <input type="hidden" name="transactionId" value="<%= id %>">
                <h5 class="text-dark"> Service : <span class="text-muted"><%= product %></span> </h5>
                <h5 class="text-dark"> Total Amount to Pay :<span class="text-muted"> <%= total %></span> </h5>
            </div>
            <h3 class="text-center">Payment providers</h3>
            <div class="d-flex justify-content-center align-items-center w-75 me-auto ms-auto mb-3">
                <div class="form-check form-check-inline w-50 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" id="stripeOption" value="stripe" name="paymentProvider" checked>
                    <label class="form-check-label w-50 d-flex justify-content-center align-items-center" for="stripeOption">
                        <img src="/assets/stripe-logo.png" class="img-fluid" alt="Stripe logo">
                    </label>
                </div>
                <div class="form-check form-check-inline w-50 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" id="paypalOption" value="paypal" name="paymentProvider">
                    <label class="form-check-label w-50 d-flex justify-content-center align-items-center" for="paypalOption">
                        <img src="/assets/paypal-logo.png" class="img-fluid" alt="PayPal logo">
                    </label>
                </div>
            </div>
            <button class="d-block btn btn-primary w-50 ms-auto me-auto mb-2">Proceed to checkout</button>
        </form>
    </div>
</div>

<%- include("../components/footer") %>