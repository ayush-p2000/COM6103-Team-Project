<div class="container">
    <div class="row my-3">
        <div class="col-md-12 text-center">
            <h2>Flagged Devices</h2>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <% if (typeof(error) !== "undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> <%= error %>
                </div>
            <% } else { %>
                <table class="table table-striped table-bordered" id="user_management">
                    <thead>
                    <tr>
                        <th>Device ID</th>
                        <th>Device Type</th>
                        <th>Device Brand</th>
                        <th>Device Model</th>
                        <th><i class="fas fa-eye"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% devices.forEach(device => { %>
                        <tr>
                            <td><%= device.device %></td>
                            <% device.data.forEach(info => { %>
                                <td><%= info.value %></td>
                            <% }) %>
                            <td><a href='/item/<%= device.device %>'>view</a></td>
                        </tr>
                    <% }) %>

                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</div>

<script src="/javascripts/userManagement/userManagement.js"></script>
