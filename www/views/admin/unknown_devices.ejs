<div class="container-fluid mt-3 mb-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="fw-semibold">
            <span>
                <a href="/admin/devices" class="text-decoration-none">
                    <i class="fa-solid fa-arrow-left text-dark"></i>
                </a>
            </span>
                <span class="fa-stack">
                    <i class="fa-solid fa-stack-2x fa-square"></i>
                    <i class="fa-solid fa-stack-1x fa-exclamation text-white"></i>
                </span>
                Flagged Devices
            </h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">


            <div class="card rounded-4 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="text-center">Actions</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal"
                                    data-bs-target="#deviceTypeModal">
                                Register New Device Type
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal"
                                    data-bs-target="#brandModal">Register
                                New Brand
                            </button>
                        </div>

                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal"
                                    data-bs-target="#modelModal">
                                Register
                                New Model
                            </button>
                        </div>
                    </div>

                    <div class="modal fade" id="deviceTypeModal" tabindex="-1" aria-labelledby="deviceTypeModal"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deviceTypeModal">New Device Type</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="mb-3">
                                            <label for="device-type-name" class="col-form-label">Device Type
                                                Name:</label>
                                            <input type="text" class="form-control" id="device-type-name">
                                        </div>
                                        <div class="mb-3">
                                            <label for="device-type-description"
                                                   class="col-form-label">Description:</label>
                                            <textarea class="form-control" id="device-type-description"></textarea>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                            id="deviceType-submit">Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="modal fade" id="brandModal" tabindex="-1" aria-labelledby="brandModal"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="brandModal">New Brand</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="mb-3">
                                            <label for="brand-name" class="col-form-label">Brand Name:</label>
                                            <input type="text" class="form-control" id="brand-name">
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                            id="brand-submit">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="modelModal" tabindex="-1" aria-labelledby="modelModal"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modelModal">New Model</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="mb-3">
                                            <label for="device-type-for-model" class="col-form-label">DeviceType</label>
                                            <select class="form-select" id="device-type-for-model">
                                                <% deviceTypes.forEach(function(device) { %>
                                                    <option value="<%= device.id %>"><%= device.name %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="device-brand-for-model" class="col-form-label">Brand:</label>
                                            <select class="form-select" id="device-brand-for-model">
                                                <% brands.forEach(function(brand) { %>
                                                    <option value="<%= brand.id %>"><%= brand.name %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="model-name" class="col-form-label">Model Name:</label>
                                            <input type="text" class="form-control" id="model-name">
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                            id="model-submit">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card rounded-4 shadow-sm">
                <div class="card-body">

                    <% if (typeof (error) !== "undefined") { %>
                        <div class="alert alert-danger" role="alert">
                            <strong>Error:</strong> <%= error %>
                        </div>
                    <% } else { %>
                        <table class="table table-striped table-bordered" id="unknown_devices_table">
                            <thead>
                            <tr>
                                <th>Device ID</th>
                                <th>Device Type</th>
                                <th>Device Brand</th>
                                <th>Device Model</th>
                                <th><i class="fas fa-eye"></i></th>
                            </tr>
                            </thead>
                            <tbody>
                            <% devices.forEach(device => { %>
                                <tr>
                                    <td><%= device.device._id %></td>
                                    <% device.data.forEach(info => { %>
                                        <td><%= info.value %></td>
                                    <% }) %>
                                    <td><a href='/admin/devices/<%= device.device._id %>'>view</a></td>
                                </tr>
                            <% }) %>

                            </tbody>
                        </table>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/deviceManagement/unknown_devices.js"></script>
