<div class="row">
    <div class="col-md-12">

        <% if (typeof (error) !== "undefined") { %>
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> <%= error %>
            </div>
        <% } else { %>
            <div id="loading-spinner">
                <div class="bg-warning text-black p-3 rounded-3 d-flex me-auto ms-auto col-md-6 col-sm-8 col-xl-4 justify-content-around mb-3 mt-5">
                    <div class="align-self-center">
                        Loading Device Types Table
                    </div>
                    <div class="spinner-border text-light" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div id="table-wrapper" class="w-100" style="display:none;">
                <table class="table table-striped table-bordered" id="device_types_table" >
                    <thead>
                    <tr>
                        <th>Type ID</th>
                        <th>Type Name</th>
                        <th><i class="fas fa-eye"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% deviceTypes.forEach(device => { %>
                        <tr>
                            <td><%= device._id %></td>
                            <td><%= device.name %></td>
                            <td><a href='/admin/types/device-types/<%= device._id %>'>view</a></td>
                        </tr>
                    <% }) %>

                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>
<script src="/javascripts/deviceTypes/device_types_table.js"></script>