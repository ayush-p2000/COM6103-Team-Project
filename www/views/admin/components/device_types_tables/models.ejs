<div class="row">
    <div class="col-md-12">
        <% if (typeof (error) !== "undefined") { %>
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> <%= error %>
            </div>
        <% } else { %>
            <div id="loading-spinner">
                <div class="bg-warning text-black p-3 rounded-3 d-flex me-auto ms-auto col-md-6 col-sm-8 col-xl-4 justify-content-around mb-3 mt-5">
                    <div class="align-self-center">
                        Loading Models Table
                    </div>
                    <div class="spinner-border text-light" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div id="table-wrapper" class="w-100 table-responsive" style="display:none;">
                <table class="table table-striped table-bordered w-100" id="models_table">
                    <thead>
                    <tr>
                        <th>Model ID</th>
                        <th>Model Name</th>
                        <th>Brand</th>
                        <th>Category</th>
                        <th><i class="fas fa-eye"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% models.forEach(model => { %>
                        <tr>
                            <td><%= model._id %></td>
                            <td><%= model.name %></td>
                            <td><%= model.brand.name %></td>
                            <td><%= model.deviceType.name %></td>
                            <td><a href='/admin/types/models/<%= model._id %>' class='btn btn-primary'>View</a></td>
                        </tr>
                    <% }) %>

                    </tbody>
                </table>
            </div>

        <% } %>
    </div>
</div>
<script src="/javascripts/deviceTypes/models_table.js"></script>
