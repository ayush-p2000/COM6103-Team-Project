<div class="container-fluid h-100">
    <div class="row mt-3">
        <div class="col-md-12">
            <h2 class="fw-semibold">
                <span class="fa-stack">
                    <i class="fa-solid fa-stack-2x fa-square"></i>
                    <i class="fa-solid fa-stack-1x fa-gauge-high text-white"></i>
                </span>
                Dashboard
            </h2>
        </div>
    </div>

    <div class="row mt-3 mb-3">
        <div class="col-md-12 px-4">
            <p class="m-0">Welcome back,</p>
            <h2 class="fw-semibold"><%= admin.first_name + " " + admin.last_name %></h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-lg-6 col-xl-4 mb-2 mb-xl-0 px-1">
            <div class="card rounded-4 shadow-sm">
                <div class="card-body">
                    <div class="card bg-danger rounded-bottom-0">
                        <div class="card-body d-flex align-content-center justify-content-around">
                            <p class="h3 text-center text-white m-0 align-self-center"><%= numOfUsers %><br><span
                                        class="fs-6 small">Accounts</span></p>

                        </div>
                        <div class="card-footer-login">
                            <p class="text-white m-0 mb-2 text-center">Total Users
                                <i class="fas fa-users text-white my-auto"></i></p>
                        </div>
                    </div>

                    <a class="btn btn-outline-danger w-100 rounded-top-0"
                       href="/admin/accounts">List of Accounts</a>
                </div>
            </div>


        </div>

        <div class="col-lg-6 col-xl-4 mb-2 mb-xl-0 px-1">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <div class="card bg-success rounded-bottom-0">
                        <div class="card-body d-flex align-content-center justify-content-around">
                            <p class="h3 text-center text-white m-0 align-self-center"><%= savedCo2 %><br><span
                                        class="fs-6 small">kg</span></p>

                        </div>
                        <div class="card-footer-login">
                            <p class="text-white m-0 mb-2 text-center">CO2 saved
                                <i class="fas fa-leaf  text-white my-auto"></i></p>
                        </div>
                    </div>

                    <a class="btn btn-outline-success w-100 rounded-top-0"
                       href="/admin/reports">Reports</a>
                </div>
            </div>

        </div>

        <div class="col-xl-4 mb-2 mb-xl-0 px-1">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <div class="card bg-primary rounded-bottom-0">
                        <div class="card-body d-flex align-content-center justify-content-around ">
                            <div class="row w-100">
                                <div class="col-md-6 border border-0 border-end border-white">
                                    <p class="h3 text-center text-white m-0 align-self-center"><%= numOfSales %>
                                        <br><span class="fs-6 small">Sales</span></p>
                                </div>
                                <div class="col-md-6 border border-0 border-start border-white">
                                    <p class="h3 text-center text-white m-0 align-self-center"><%= numOfReferrals %><br><span
                                                class="fs-6 small">Referrals</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer-login">
                            <p class="text-white m-0 mb-2 text-center">Sales (<%= previous_months %>
                                months)
                                <i class="fas fa-shopping-cart text-white my-auto"></i>
                            </p>
                        </div>
                    </div>

                    <a class="d-block btn btn-outline-primary w-100 rounded-top-0"
                       href="/admin/devices">List of Devices</a>
                </div>
            </div>

        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 p-2">
            <a href="/admin/reports/sales" class="text-decoration-none text-body">
                <div class="card rounded-4 shadow-sm hover-shadow">
                    <div class="card-body w-100 align-content-center" style="max-height: 350px">
                        <h5 class="card-title text-center">Total Sales</h5>

                        <%- include('reports/charts/sales', salesData) %>

                        <div class="d-flex justify-content-end">
                            <a class="btn btn-outline-primary" href="/admin/reports/sales">View Details</a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>


    <div class="row mb-3">
        <div class="col-12 p-2">
            <a href="/admin/reports/referrals" class="text-decoration-none text-body">
                <div class="card rounded-4 shadow-sm hover-shadow">
                    <div class="card-body w-100 align-content-center" style="max-height: 350px">
                        <h5 class="card-title text-center">Total Referrals</h5>

                        <%- include('reports/charts/referrals', referralsData) %>

                        <div class="d-flex justify-content-end">
                            <a class="btn btn-outline-primary" href="/admin/reports/referrals">View Details</a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <script src="/javascripts/reports/reports_util.js"></script>
</div>