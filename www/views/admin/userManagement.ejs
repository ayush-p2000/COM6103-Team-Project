<div class="container">
    <h2>User Management</h2>
        <div class="col-md-3">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="staffOnly">
                        <label class="custom-control-label" for="staffOnly">Staff Only</label>
                    </div>
        </div>
<table class="table table-striped table-bordered" id="user_management">
    <thead>
    <tr>
        <th>User</th>
        <th>Device</th>
        <th>Level</th>
        <th><i class="fas fa-eye"></i></th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(data => { %>
        <tr>
            <td><%= data.user %></td>
            <td><%= data.device %></td>
            <td><%= data.level%></td>
            <td><a href="#">view</a></td>
        </tr>
    <% }) %>
    </tbody>
</table>
</div>

