<div class="container-fluid">
    <div class="row p-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div>
                        <canvas id="sales_chart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row p-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="sales_table">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>User</th>
                                <th>Product</th>
                                <th>Value</th>
                                <th>Referral Amount</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% data.table.forEach(function(item){ %>
                                <tr>
                                    <td><%= item.date %></td>
                                    <td>
                                        <a href="/admin/users/<%= item.user.id %>">
                                            <%= item.user.name %>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/products/<%= item.device.id %>">
                                            <%= item.device.name %>
                                        </a>
                                    </td>
                                    <td><%= item.price %></td>
                                    <td><%= item.referral %></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>