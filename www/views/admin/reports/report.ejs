<script src="/javascripts/reports/reports_util.js"></script>

<% if (report !== undefined) { %>
    <script src="/javascripts/reports/<%= report %>.js"></script>
<% } %>

<div class="container-fluid h-100 py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <h2 class="fw-semibold">
                    <span>
                        <a href="/admin/reports" class="text-decoration-none">
                            <i class="fa-solid fa-arrow-left text-dark"></i>
                        </a>
                    </span>
                    <span class="fa-stack">
                        <i class="fa-solid fa-stack-2x fa-square"></i>
                        <i class="fa-solid fa-stack-1x fa-line-chart text-white"></i>
                    </span>
                    <%= title %> Report
                </h2>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <% if (typeof report !== 'undefined') { %>
                        <%- include(report) -%>
                    <% } else { %>
                        <div class="text-center">
                            <h1>Report not found</h1>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
