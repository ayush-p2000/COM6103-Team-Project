<div class="container-fluid">
    <div class="row p-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body height-500">
                    <%- include('charts/quotes') %>
                </div>
            </div>
        </div>
    </div>

    <div class="row p-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="quotes_table">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>User</th>
                                <th>Product</th>
                                <th>Provider</th>
                                <th>State</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% table.forEach(function(item){ %>
                                <tr>
                                    <td><%= item.date_added %></td>
                                    <td>
                                        <a href="/admin/users/<%= item.user?._id %>">
                                            <%= `${item.user?.first_name} ${item.user?.last_name}` %>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/admin/products/<%= item.quote_id %>">
                                            <%= item.name %>
                                        </a>
                                    </td>
                                    <td>
                                        <% if (item.provider !== 'Unknown provider') { %>
                                            <img src="<%= item.logo %>" class="img-fluid w-auto h-auto" style="max-width: 100px; max-height: 75px">
                                        <% } else { %>
                                            <p class="text-muted"><%= item.provider %></p>
                                        <% } %>
                                    </td>

                                    <td>
                                        <p class="badge <%= quoteState.stateToColour(item.state, "bg-") %>">
                                            <%= quoteState.stateToString(item.state) %>
                                        </p>
                                    </td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>