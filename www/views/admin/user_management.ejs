<div class="container">
    <div class="row my-3">
        <div class="col-md-12 text-center">
            <h2>User Management</h2>
            <hr>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="form-check form-switch mx-auto">
                <input type="checkbox" class="form-check-input" id="staffOnly">
                <label class="form-check-label" for="staffOnly">Staff Only</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered" id="user_management">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Device</th>
                    <th>Level</th>
                    <th><i class="fas fa-eye"></i></th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.user %></td>
                        <td><%= user.device %></td>
                        <td><%= user.level %></td>
                        <td><a href="/admin/accounts/<%= user.id %>">view</a></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/javascripts/userManagement/userManagement.js"></script>
