<div class="d-flex" style="height: 100vh;">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px; height: 100vh">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi pe-none me-2" width="40" height="32"></svg>
            <span class="fs-4">Home</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="/user_dashboard" class="nav-link active" aria-current="page">
                    <svg class="bi pe-none me-2" width="16" height="16"></svg>
                    My Items
                </a>
            </li>
            <li>
                <a href="/marketplace" class="nav-link text-white">
                    <svg class="bi pe-none me-2" width="16" height="16"></svg>
                    My Marketplace
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi pe-none me-2" width="16" height="16"></svg>
                    Orders
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                    History
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                    Contact us
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://img.freepik.com/premium-vector/young-smiling-man-avatar-man-with-brown-beard-mustache-hair-wearing-yellow-sweater-sweatshirt-3d-vector-people-character-illustration-cartoon-minimal-style_365941-860.jpg?size=338&ext=jpg&ga=GA1.1.1700460183.1708387200&semt=ais" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong>User</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><a class="dropdown-item" href="/my-profile">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Sign out</a></li>
            </ul>
        </div>
    </div>
    <div class="flex-grow-1 p-3">
        <!-- Your main content goes here -->
        <h1 style="margin: 30px; display: flex; align-content: center; justify-content: center; font-weight: bold">My Items</h1>
        <% items.forEach(item => { %>
            <div class="card mt-4">
                <div class="card-body row d-flex align-items-center">
                    <div class="col-3 col-md-2 col-lg-2 col-xl-1">
                        <img src="<%= item.picUrl %>" class="img-fluid item-img">
                    </div>
                    <div class="col-6 col-md-8 col-lg-7 col-xl-8">
                        <h4 class="d-flex align-items-center"><%= item.name %><span class="badge bg-success ms-2" style="font-size: 0.4em;">Approved</span></h4>
                        <p class="m-0 p-0 text-muted"><small>Device Type: </small><%= item.deviceType %></p>
                        <p class="m-0 p-0 text-muted"><small>Classification: </small><%= item.classification %></p>
                        <p class="m-0 p-0 text-muted"><small>Price: </small>Â£<%= item.price %></p>
                    </div>
                    <div class="col-3 col-md-2 col-lg-3 col-xl-3 d-flex justify-content-end align-items-center">
                        <div class="btn btn-primary">View</div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

