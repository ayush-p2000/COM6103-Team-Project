<%- include("../components/header.ejs") %>

<%- include("../components/navbar.ejs") %>

<div class="p-2 container-md mt-4">
    <form method="POST" name="editUserDetails" class="col-8 me-auto ms-auto">
        <h2>
            Your Profile
        </h2>
        <div class="mt-3 me-auto ms-auto">
            <img src="<%= user.avatar %>>" class="me-auto ms-auto d-block rounded-circle" alt="Avatar"
                 style="max-width: 200px;">
        </div>

        <h4 class="text-center mt-4 mb-3">Basic details</h4>
        <div class="d-flex w-100 shadow-lg flex-column ps-5 pe-5 pt-3 pb-3">
            <div class="row">
                <label for="firstName" class="col-3 align-self-center">First Name: </label>
                <input name="firstName" id="firstName" class="col-xl form-control"
                       value="<%= user.firstName %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>
            <div class="row">
                <label for="lastName" class="col-3 align-self-center">Last Name: </label>
                <input name="lastName" id="lastName" class="col-xl form-control"
                       value="<%= user.lastName %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-1"/>
        </div>
        <h4 class="text-center mt-4 mb-3">Address & Contact Information</h4>
        <div class="d-flex w-100 shadow-lg flex-column ps-5 pe-5 pt-3 pb-3">
            <div class="row">
                <label for="email" class="col-3 align-self-center">Email: </label>
                <input name="email" id="email" class="col-xl form-control" value="<%= user.email %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>
            <div class="row">
                <label for="phone" class="col-3 align-self-center">Telephone: </label>
                <input name="phone" id="phone" class="col-xl form-control" value="<%= user.phone %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>

            <div class="row">
                <label for="addressFirst" class="col-3 align-self-center">Address Line 1: </label>
                <input name="addressFirst" id="addressFirst" class="col-xl form-control"
                       value="<%= user.addressFirst %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>

            <div class="row">
                <label for="addressSecond" class="col-3 align-self-center">Address Line 2: </label>
                <input name="addressSecond" id="addressSecond" class="col-xl form-control"
                       value="<%= user.addressSecond %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>

            <div class="row">
                <label for="postCode" class="col-3 align-self-center">Post Code: </label>
                <input name="postCode" id="postCode" class="col-xl form-control"
                       value="<%= user.postCode %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>

            <div class="row">
                <label for="city" class="col-3 align-self-center">City: </label>
                <input name="city" id="city" class="col-xl form-control" value="<%= user.city %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3 mb-3"/>

            <div class="row">
                <label for="country" class="col-3 align-self-center">Country: </label>
                <input name="country" id="country" class="col-xl form-control"
                       value="<%= user.country %>"/>
            </div>
            <hr class="w-100 text-center ms-auto me-auto pl-1 pr-1 mt-3"/>
        </div>
        <div class="d-flex mt-2 align-items-center justify-content-start mt-3">
            <button class="btn btn-primary" type="submit">Save details</button>
        </div>
        <h3 class="w-100 text-center mt-4 mb-1r">Your reduced footprint</h3>
        <div class="card bg-success mt-3 rounded-5 ms-auto me-auto col-lg-6">
            <div class="card-body d-flex align-content-center justify-content-evenly">
                <p class="h3 text-center text-white m-0 align-self-center"><%= user.savedCo2 %> Nkg</p>
                <img src="/assets/leaf.svg" alt="">
            </div>
            <div class="card-footer">
                <p class="text-white m-0 text-center">C02 Saved because of eWaste</p>
            </div>
        </div>
    </form>

</div>

