<%- include("../components/header.ejs") %>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh">
    <main class="form-signin w-100 m-auto">
        <form>
            <h1 class="parent-text h3">Please Register</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="Melon Usk">
                <label for="floatingInput">Name</label>
            </div>
            <div class="form-floating">
                <input type="date" class="form-control" id="floatingInput">
                <label for="floatingInput">Date of Birth</label>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Accept Terms and Conditions
                </label>
            </div>

            <div class="card-footer-sign">
                <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>

                <div class="login-register">
                    <p>Already have an account?<a href="/users/login" class="register-link"> Login</a> </p>

                </div>
            </div>
        </form>
    </main>
</div>


