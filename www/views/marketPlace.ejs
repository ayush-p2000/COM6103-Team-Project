<link rel='stylesheet' href="/stylesheets/bootstrap.min.css">

<!--Sorter btns-->
<div class="mx-4">
    <div class="row m-4">
      <div class="btn-group col-4">
        <button type="button" class="btn btn-secondary" onclick="console.log()">
          Classification
        </button>
      </div>
      <div class="btn-group col-4">
        <button type="button" class="btn btn-secondary" onclick="console.log()">
          Device Type
        </button>
      </div>
      <div class="btn-group col-4">
        <button type="button" class="btn btn-secondary" onclick="console.log()">
          Price
        </button>
      </div>
    </div>

<!--items list-->
    <div class="row g-2">
        <% items.forEach(function(item) { %>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card h-100">
                    <img src="<%= item.picUrl %>" class="card-img-top img-fluid" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.name %></h5>
                        <p class="m-0 ">Device Type: <span class="fw-light fst-italic text-muted"><%= item.deviceType %></span></p>
                        <p class="m-0">Classifications: <span class="fw-light fst-italic text-muted"><%= item.classification %></span></p>
                        <p class="m-0">Reference Price: <span class="fw-light fst-italic text-muted">Â£<%= item.price %></span></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>


<style>
    .card img{
        padding: 20px;
        border-radius: 30px 30px 0px 0px;
        height: 200px;
        max-height: 200px;
        object-fit: contain;
    }
</style>
